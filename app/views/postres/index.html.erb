    <% @postres.each do |postre| %>
      <tr>
        <td><%= postre.nombre %></td>
        <td><%= postre.precio %></td>
        <td><%= postre.source %></td>
        <td class="imagencarrito"><img src=<%=postre.source%>></td>
        <td><%= link_to 'Ver', postre %></td>
        <td><%= link_to 'Editar', edit_postre_path(postre) %></td>
        <td><%= link_to 'Eliminar', postre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

